<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:autofit="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:adjustViewBounds="true"
    android:background="#FFFFFF"
    tools:context=".Options">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".25"
        android:background="@drawable/homeheader" />

    <android.support.v7.widget.GridLayout
        android:id="@+id/mainGrid"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:columnCount="1"
        app:rowCount="4"
        app:alignmentMode="alignMargins"
        app:columnOrderPreserved="false"
        android:layout_marginTop="65dp"



        android:paddingBottom="75dp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"


        >

        <!--Row 1-->

        <!--Column 1-->

        <android.support.v7.widget.CardView
            android:id="@+id/R1C1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="25dp"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:onClick="roadSigns"


            app:cardBackgroundColor="@color/buttonBack"
            app:cardCornerRadius="10dp"
            app:cardElevation="1dp"


            app:layout_columnWeight="1"
            app:layout_rowWeight="1">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="8dp"
                android:layout_marginTop="12dp"
                android:background="@color/roadSigns"
                android:gravity="center"
                android:orientation="vertical">

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:autoSizeTextType="uniform"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:text="ROAD SIGNS"
                    android:textColor="#FFFFFF"
                    android:textAlignment="center"
                    android:textStyle="bold" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>


        <!--Row 2-->

        <!--Column 1-->

        <android.support.v7.widget.CardView

            android:id="@+id/R2C1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="25dp"
            android:onClick="quiz"
            app:cardBackgroundColor="@color/buttonBack"
            app:cardCornerRadius="10dp"
            app:cardElevation="1dp"
            app:layout_columnWeight="1"

            app:layout_rowWeight="1">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="8dp"
                android:background="@color/solveQuiz"
                android:gravity="center"
                android:orientation="vertical">

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:autoSizeTextType="uniform"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:text="SOLVE QUIZ"
                    android:textColor="#FFFFFF"
                    android:textAlignment="center"
                    android:textStyle="bold" />

            </RelativeLayout>
        </android.support.v7.widget.CardView>


        <!--Row 3-->

        <!--Column 1-->

        <android.support.v7.widget.CardView
            android:id="@+id/R3C1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="25dp"
            android:onClick="shareApp"
            app:cardBackgroundColor="@color/buttonBack"
            app:cardCornerRadius="10dp"
            app:cardElevation="1dp"
            app:layout_columnWeight="1"

            app:layout_rowWeight="1">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="8dp"
                android:layout_marginTop="12dp"
                android:background="@color/ShareUs"
                android:gravity="center"
                android:orientation="vertical">


                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:autoSizeTextType="uniform"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:text="SHARE APP"
                    android:textColor="#FFFFFF"
                    android:textAlignment="center"
                    android:textStyle="bold" />



            </RelativeLayout>
        </android.support.v7.widget.CardView>


        <!--Row 4-->

        <!--Column 1-->

        <android.support.v7.widget.CardView
            android:id="@+id/R4C1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="25dp"
            android:onClick="rateUsOnAppStore"
            app:cardBackgroundColor="@color/buttonBack"
            app:cardCornerRadius="10dp"
            app:cardElevation="1dp"
            app:layout_columnWeight="1"

            app:layout_rowWeight="1">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="8dp"
                android:layout_marginTop="12dp"
                android:background="@color/RateUs"
                android:gravity="center"
                android:orientation="vertical">

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:autoSizeTextType="uniform"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:text="RATE OUR APP"
                    android:textColor="#FFFFFF"
                    android:textAlignment="center"
                    android:textStyle="bold" />


            </RelativeLayout>
        </android.support.v7.widget.CardView>






    </android.support.v7.widget.GridLayout>


</LinearLayout>